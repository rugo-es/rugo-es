---
interface Props {
  resource: {
    name: string;
    image: string;
    url: string;
    description: string;
    tags: string[] | null;
    favorite: boolean;
  };
}

const { resource } = Astro.props;
---

<li class="col-12 col-md-6 col-lg-4 p-2" data-category={resource.tags}>
  <div class="h-100 d-flex flex-column border border-2 border-primary border-opacity-25 shadow rounded p-2">
    <div class="d-flex justify-content-between align-items-center gap-1">
      <a class="fw-bold" href={resource.url} target="_blank">
        {resource.name}
      </a>
      <img src={"/resources/"+resource.image} class="align-self-start rounded-1 m-0 resource-icon">
    </div>
    <span class="flex-grow-1 small my-1">{resource.description}</span>
    <div>
      {resource.tags && resource.tags.map((tag: any) => <span class="badge text-bg-primary me-1">{tag}</span>)}
    </div>
  </div>
</li>

