---
import FormattedDate from "@/components/FormattedDate.astro";
const { post } = Astro.props;
---

<li class="post-card rounded mb-3">
    <div class="d-flex flex-column flex-lg-row p-2 p-md-3">
      <a href={`/blog/${post.id}`}>
        <div class="post-card-image w-100" style={`background-image: url(${post.data.image.url}); background-color: ${post.data.image.bgColor}`}></div>
      </a>
      <div class="flex-grow-1 py-3 py-lg-0 px-0 px-lg-3">
        <div class="text-wrap">
          {post.data.tags.map((tag: any) => <span class="d-inline-block">#{tag}&nbsp;</span>)}
        </div>
        <a href={`/blog/${post.id}`}>
          <h4>{post.data.title}</h4>
        </a>
        <p>{post.data.description}</p>
        <FormattedDate date={new Date(post.data.pubDate)} />
      </div>
    </div>
  </a>
</li>

