---
const currentPath = Astro.url.pathname;

const navLinks = [
  { path: '/', label: 'Inicio', emoji: '🏠' },
  { path: '/blog', label: 'Blog', emoji: '✏️' },
  { path: '/resources', label: 'Recursos', emoji: '📚' },
];
---

<header>
  <nav id="navigation" class="navbar navbar-expand-lg fixed-top">
    <div class="container">

      <a class="navbar-brand ps-1" href="/">
        <img class="me-1" src="/favicon.png" alt="Logo" height="100%">
      </a>

      <button id="navBtnCollapse" class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navigationCollapse" aria-controls="navigationCollapse" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div id="navigationCollapse" class="collapse navbar-collapse">
        <ul class="navbar-nav column-gap-3 m-auto p-1 p-lg-0">
          {navLinks.map(link => (
            <li class="nav-item border-2 border-bottom border-primary border-opacity-50">
              <a class={`nav-link ${currentPath === link.path ? 'active' : ''}`} aria-current="page" href={link.path}><span class="emoji">{link.emoji}</span>{link.label}</a>
            </li>
          ))}
        </ul>
        <button id="toggleTheme" class="btn btn-sm btn-light shadow m-1 m-lg-0">
          <span id="themeIcon" class="d-inline-block lh-sm fs-5 theme-icon"></span>
        </button>
      </div>

    </div>
  </nav>
</header>
<script>
  import '@/scripts/navigation';
</script>